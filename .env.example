# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.2

# AI Quality Settings (for paid service)
# Set to 'true' for premium quality (uses GPT-4o, costs ~10x more but better results)
# Set to 'false' for standard quality (uses gpt-4o-mini, cheaper but still very good)
USE_ADVANCED_AI=false

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app.netlify.app
NEXT_PUBLIC_APP_NAME=MANEB Exam Prep AI

# Upload Configuration
UPLOAD_TMP_DIR=/tmp/uploads
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=pdf,docx,jpg,jpeg,png

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=20
RATE_LIMIT_WINDOW=900000

# File Retention (in hours)
FILE_RETENTION_HOURS=24

# Security
API_SECRET_KEY=your-openai-api-key-here
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-app.netlify.app

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
SENTRY_DSN=

# Email & Notifications (optional for automated feedback)
# SendGrid for email notifications
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=ylikagwa@gmail.com

# WhatsApp Business API (optional for automated WhatsApp)
# Get from: https://business.whatsapp.com/
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Feature Flags
# OCR (Optical Character Recognition) - Enable to extract text from scanned/image-based PDFs
# Set to 'true' if your PDFs are scanned documents or contain images with text
# Note: OCR processing is slower and requires more resources
ENABLE_OCR=true
ENABLE_OFFLINE_MODE=false
ENABLE_RATE_LIMITING=true

# Admin Dashboard
# Password to access admin analytics dashboard at /admin
# Change this to a secure password!
ADMIN_PASSWORD=Fatty@Likagwa
